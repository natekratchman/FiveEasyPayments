<!DOCTYPE html>
<html>
<head>
  <title>FiveEasyPayments</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>


<body data-spy="scroll" data-target=".navbar-collapse">
<%= notice %>

<!-- BEGIN OUTTER -->
<div class="outter">
  <!-- BEGIN NAVBAR -->
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="/">
                <%= image_tag("logo-top.png", alt: "FiveEasyPayments") %> FiveEasyPayments</a>
                <!-- <img src="logo-top.png" alt=""> FiveEasyPayments</a> -->
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav navbar-right">
                  <li><a class="sscroll" href="/">HOME</a>
                  </li>
                  <li><a class="sscroll" href="/about">ABOUT</a>
                  </li>
                  <% if logged_in? %>
                    <li><%= link_to "LOGOUT", logout_path, class: "sscroll" %></li>
                  <% else %>
                    <li><%= link_to "MY SCORE", login_path, class: "sscroll" %></li>
                  <% end %>
              </ul>
          </div>
          <!-- /.navbar-collapse -->
      </div>
      <!-- /.container-fluid -->
  </nav>
  <!-- END NAVBAR -->
  
  <%= yield %>

</div>
<!-- END OUTTER -->

<!-- BACK TO TOP -->
<div class="totop" id="backtotop">
    <span>
        <a href="#top" class="first sscroll"><i class="fa fa-angle-up"></i></a>
        <a href="#top" class="hover sscroll"><i class="fa fa-angle-up"></i></a>
    </span>
</div>
<!-- END BACK TO TOP -->
</body>
</html>
