BEGIN HERO -->
<div class="home-wrapper" id="top">
    <div class="content-home-wrapper text-center">
        <div class="header-center fade-in">
            <h1>Five Easy Payments</h1>
            <p>Your Venmo Credit Score</p>
            <p><a class="sscroll slider-more" href="#about"><i class="fa fa-angle-down"></i></a></p>
        </div>
    </div>
    <div class="fullfilter"></div>
    <div><%= image_tag("beach.jpg", class: "home-image") %></div>
<!-- END HERO -->

<!-- BEGIN CONTENT  -->
<div class="section-outter">
  <section id="about">
      <div class="section-wrapper">
          <!-- BEGIN VENMO SCORE -->
          <div class="section-inner">
            <div class="container">
              <div class="section-title">
                  <h2 class="title animatez" data-effect="fadeInDown">YOUR VENMO SCORE</h2>
                  <% score = @current_user.getLetterGrade(@current_user.venmo_score) %>
                  <h4 class="title animatez" data-effect="fadeInUp"><span class="main-color"><%= score %></span></h4>
              </div>
              <div class="spacer small"></div>
              
              <!-- BEGIN TWITTER SHARE -->
              <div class="animatez" data-effect="fadeInUp">
                <a class="twitter-share-button" href="https://twitter.com/share"
                data-url="http://fiveeasypayments.herokuapp.com"
                data-size="large"
                data-count="none"
                <% if @current_user.venmo_score >= 93 %>
                data-text="I scored an <%= score %> on #FiveEasyPayments. You can trust me. What's your #VenmoCreditScore?"
                <% elsif @current_user.venmo_score >= 83 %>
                data-text="I scored a <%= score %> on #FiveEasyPayments. You can trust me. What's your #VenmoCreditScore?"
                <% else %>
                data-text="I scored a <%= score %> on #FiveEasyPayments. You should think twice before lending me money. What's your #VenmoCreditScore?"
                <% end %>
                > Share your score </a>
              </div>
            <!-- END TWITTER SHARE -->

            </div>
          </div>
          <!-- END VENMO SCORE -->

          <div class="spacer big"></div>

          <!-- BEGIN SUNBURST -->
          <div class="section-inner">
            <div class="container">
              <div class="section-title">
                  <h2 class="title animatez" data-effect="fadeInDown">Transaction Breakdown</h2>
                  <h4 class="subtitle animatez" data-effect="fadeInUp"><span class="main-color">Click Around</span></h4>
              </div>
              <div id='chart' class="animatez" data-effect="fadeInUp"></div>
            </div>
          </div>
          <!-- END SUNBURST -->

          <div class="spacer big"></div>

          <!-- BEGIN SETTLED CALLOUT (blue section) -->
          <section id="settled">
              <div class="section-wrapper" id="custom-bg-about">
                  <div class="section-title animated fadeInDown">
                      <%= tag("h2", class: "title white animatez", data: {effect: 'fadeInDown'} ) %> Your response time for completing charges is <span class="main-color"><%= @current_user.settled_ratio.round(2) %></span> minutes/dollar</h2>
                      <h4 class="subtitle animatez white" data-effect="fadeInUp">In total, that's <span class="main-color"><%= @current_user.settled_time.round(2) %></span> minutes you've kept your friends waiting.</h4>
                  </div>
          <div class="spacer big"></div>
              </div>
          </section>
          <!-- END SETTLED CALLOUT -->

          <!-- BEGIN TOTAL PAID CIRCLES -->
          <div class="section-inner">
            <div class="container">
            <div class="spacer big"></div>
              <p hidden=true id="uncharged_value"><%= @current_user.uncharged_value.round(2) %></p>
              <p hidden=true id="settled_value"><%= @current_user.settled_value.round(2) %></p>
              <div id="custom-circles" class="row">
                <div id="total_paid_circle_settled" class="animatez col-md-4" data-effect="fadeInLeft">
                </div>
                <div class="section-title col-md-4 custom-top-padding">
                <h2 class="title animatez" data-effect="fadeInDown">Total Paid</h2>
                <h4 class="subtitle animatez" data-effect="fadeInUp"><span class="main-color">Charged vs. Uncharged</span></h4>
              </div>
                <div id="total_paid_circle_uncharged" class="animatez col-md-4" data-effect="fadeInRight">
                </div>
              </div>
            </div>
          </div>
          <div class="spacer big"></div>
          <!-- END TOTAL PAID CIRCLES -->

          <!-- BEGIN PENDING CALLOUT (blue section) -->
          <section id="settled">
              <div class="section-wrapper" id="custom-bg-about">
                  <div class="section-title animated fadeInDown">
                      <%= tag("h2", class: "title white animatez", data: {effect: 'fadeInDown'} ) %> You have <span class="main-color">$<%= @current_user.pending_value.round(2) %></span> of outstanding charges.</h2>
                      <% if @current_user.pending_time == 0 %>
                        <h4 class="subtitle animatez white main-color" data-effect="fadeInUp">You're awesome.</h4>
                        <p hidden=true id="minutes">0</p>
                      <% else %>
                        <h4 class="subtitle animatez white" data-effect="fadeInUp">It's already been <span id="minutes" class="main-color"><%= @current_user.pending_time.to_i %></span> minutes and <span id="seconds" class="main-color">12</span> seconds. You should probably <a href="http://venmo.com" target="_blank">settle up</a>.</h4>
                      <% end %>
                  </div>
          <div class="spacer big"></div>
              </div>
          </section>
          <!-- END PENDING CALLOUT -->

    </div>
  </section>
</div>

<!-- END CONTENT -->

