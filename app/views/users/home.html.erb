<!-- BEGIN HERO -->
<div class="home-wrapper" id="top">
    <div class="content-home-wrapper text-center">
        <div class="header-center fade-in">
            <h1>Five Easy Payments</h1>
            <p>Your Venmo Credit Score</p>
            <p><a class="sscroll slider-more" href="#about"><i class="fa fa-angle-down"></i></a></p>
        </div>
    </div>
    <div class="fullfilter"></div>
    <div><%= image_tag("scrooge-mcduck2.png", class: "home-image") %></div>
<!-- END HERO -->

<!-- BEGIN CONTENT  -->
<div class="section-outter">
  <section id="about">
      <div class="section-wrapper">
          <!-- BEGIN VENMO SCORE -->
          <div class="section-inner">
            <div class="container">
              <div class="section-title">
                  <h2 class="title animatez" data-effect="fadeInDown">YOUR VENMO SCORE</h2>
                  <h4 class="title animatez" data-effect="fadeInUp"><span class="main-color">A+</span></h4>
              </div>
              <div id='' class="animatez" data-effect="fadeInUp"></div>
            </div>
          </div>
          <!-- END VENMO SCORE -->

          <div class="spacer big"></div>

          <!-- BEGIN SUNBURST -->
          <div class="section-inner">
            <div class="container">
              <div class="section-title">
                  <h2 class="title animatez" data-effect="fadeInDown">Transaction Breakdown</h2>
                  <h4 class="subtitle animatez" data-effect="fadeInUp"><span class="main-color">Click Around</span></h4>
              </div>
              <div id='chart' class="animatez" data-effect="fadeInUp"></div>
            </div>
          </div>
          <!-- END SUNBURST -->

          <div class="spacer big"></div>

          <!-- BEGIN SETTLED CALLOUT (blue section) -->
          <section id="settled">
              <div class="section-wrapper" id="custom-bg-about">
                  <div class="section-title animated fadeInDown">
                      <%= tag("h2", class: "title white animatez", data: {effect: 'fadeInDown'} ) %> Your response time for completing charges is <span class="main-color"><%= @current_user.settled_ratio.round(2) %></span> minutes/dollar</h2>
                      <h4 class="subtitle animatez white" data-effect="fadeInUp">In total, that's <span class="main-color"><%= @current_user.settled_time.round(2) %></span> minutes you've kept your friends waiting.</h4>
                  </div>
          <div class="spacer big"></div>
              </div>
          </section>
          <!-- END SETTLED CALLOUT -->

          <!-- BEGIN TOTAL PAID CIRCLES -->
          <div class="section-inner">
            <div class="container">
            <div class="spacer big"></div>
              <div class="section-title">
                  <h2 class="title animatez" data-effect="fadeInDown">Total Paid</h2>
                  <h4 class="subtitle animatez" data-effect="fadeInUp"><span class="main-color">Charged vs. Uncharged</span></h4>
              </div>
              <!-- <div style="height: 200px;" id='' class="animatez" data-effect="fadeInUp">Circles go here!</div>
            </div> -->
            <div id="total_paid_circle_uncharged" class="animatez" data-effect="fadeInUp"></div>
            <div id="total_paid_circle_settled" class="animatez" data-effect="fadeInUp"></div>
          </div>
          <!-- END TOTAL PAID CIRCLES -->

          <!-- BEGIN PENDING CALLOUT (blue section) -->
          <section id="settled">
              <div class="section-wrapper" id="custom-bg-about">
                  <div class="section-title animated fadeInDown">
                      <%= tag("h2", class: "title white animatez", data: {effect: 'fadeInDown'} ) %> You have <span class="main-color">$<%= @current_user.pending_value.round(2) %></span> of outstanding charges.</h2>
                      <h4 class="subtitle animatez white" data-effect="fadeInUp">It's already been <span class="main-color"><%= @current_user.pending_time.round(2) %></span> minutes. What're you waiting for??</h4>
                  </div>
          <div class="spacer big"></div>
              </div>
          </section>
          <!-- END PENDING CALLOUT -->

    </div>
  </section>
</div>

<!-- END CONTENT -->

